<resources>

    <!-- Base application theme. -->
    <style name="EventsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color_ev</item>
        <item name="colorPrimaryDark">@color/dark_primary_color_ev</item>
        <item name="colorAccent">@color/accent_color_ev</item>
    </style>

    <style name="EventsTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EventsTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="EventsTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">50sp</item>

    </style>

    <style name="EventsTheme.checkbox" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/primary_color_ev</item>

    </style>
    //#E0E0E0

    <style name="EventsTheme.textfield" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#E0E0E0</item>
    </style>

    <style name="EventsTheme.spinner" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:spinnerItemStyle">@style/EventsTheme.spinneritem</item>

    </style>

    <style name="EventsTheme.spinneritem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>


</resources>
