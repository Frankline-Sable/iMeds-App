<resources>

    <!-- Base application theme. -->
    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color_stt</item>
        <item name="colorPrimaryDark">@color/dark_primary_color_stt</item>
        <item name="colorAccent">@color/accent_color_stt</item>
    </style>

    <style name="SettingsTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingsTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SettingsTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
