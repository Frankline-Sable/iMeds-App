<resources>

    <!-- Base application theme. -->
    <style name="FinderTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color_fdr</item>
        <item name="colorPrimaryDark">@color/dark_primary_color_fdr</item>
        <item name="colorAccent">@color/accent_color_fdr</item>
    </style>

    <style name="FinderTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FinderTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FinderTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
