<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fsdev.imeds.Wiki_Topics_Lists"
    tools:showIn="@layout/activity_wiki__topics__lists">

    <ListView
        android:id="@+id/wikiListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/layout_wikis"
        android:clickable="true"
        tools:listheader="@layout/header_wikis"/>

    <TextView
        android:id="@+id/wikiEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#e0e0e0"
        android:text="There are no wikis for this topic"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="invisible" />

</RelativeLayout>
