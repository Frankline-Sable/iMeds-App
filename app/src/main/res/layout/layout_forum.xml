<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_forum_list">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@null"
        android:id="@+id/forumImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:45AM"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/forumTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break Down Joy"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_toRightOf="@+id/forumImage"
        android:layout_toLeftOf="@+id/forumTime"
        android:singleLine="true"
        android:id="@+id/forumUser"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/forumImage"
        android:layout_below="@+id/forumUser"
        android:paddingLeft="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Looking to develop a web Ui"
            android:layout_below="@+id/forumUser"
            android:layout_toRightOf="@+id/forumImage"
            android:singleLine="true"
            android:maxLines="1"
            android:id="@+id/forumTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I really like website development is not a joke of utter less"
            android:layout_below="@+id/forumTitle"
            android:layout_toRightOf="@+id/forumImage"
            android:id="@+id/forumDesc"
            android:maxLines="2"
            />
    </LinearLayout>
</RelativeLayout>